@model IEnumerable<DatabaseLayer.UserTable>

@{
    ViewBag.Title = "All Users  > Dashborad";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Registration", "Create", null, new { @class = "btn btn-success" })
    <hr />
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">All Users</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>

                        <tr>
                            <th>
                               User Name
                            </th>
                            <th>
                               Password
                            </th>
                            <th>
                               Employee
                            </th>
                            <th>
                               Status
                            </th>
                            <th>
                               User Type
                            </th>
                            <th>Action</th>
                        </tr>
                        </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Password)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EmployeeID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IsActive)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserTypeTable.UserType)
                                </td>
                                <td class="btn-group">
                                    @Html.ActionLink("Edit", "Edit", new { id = item.UserID }, new { @class = "btn btn-info" }) 
                                    @Html.ActionLink("Details", "Details", new { id = item.UserID }, new {@class = "btn btn-info"}) 
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</p>
