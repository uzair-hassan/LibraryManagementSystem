@model IEnumerable<DatabaseLayer.DepartmentsTable>

@{
    ViewBag.Title = "Add Department > Dashborad";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("New Department", "Create", null, new { @class = "btn btn-success" })
    <hr />
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Department</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>

                        <tr>
                            <th>
                                Department
                            </th>
                            <th>
                               User
                            </th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserTable.UserName)
                                </td>
                                <td class="btn-group">
                                    @Html.ActionLink("Edit", "Edit", new { id = item.DepartmentID }, new {@class = "btn btn-primary"}) 
                                    @Html.ActionLink("Details", "Details", new { id = item.DepartmentID }, new { @class = "btn btn-info" }) 
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>

            </div>
        </div>
</div>

